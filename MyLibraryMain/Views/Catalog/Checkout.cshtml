@model MyLibraryMain.Models.Checkouts.CheckoutModel


@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Checkout</h2>

<div class="row">

    <div class="col-lg-3">
        <h4>@Model.Title</h4>
        <img src="@Model.ImageUrl" />
    </div>

    <div class="col-lg-9">
        @using (Html.BeginForm("PlaceCheckout", "Catalog", FormMethod.Post))
        {
            @Html.HiddenFor(a => a.AssetId)

            <div>
                Please insert a library card Id
                @Html.TextBoxFor(a => a.LibraryCardId)
            </div>
            <div>
                <button type="submit" class="btn btn-success btn-lg">Checkout Out</button>
            </div>
        }
    </div>

</div>
